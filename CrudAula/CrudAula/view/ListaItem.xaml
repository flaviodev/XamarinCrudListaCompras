<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudListaDeCompra.view.ListaItem" Title="Lista de Compras">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <ListView x:Name="Lista"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" ItemSelected="Lista_ItemSelected"/>

            <Button Text="+ Novo Item" Clicked="Button_Clicked" HorizontalOptions="CenterAndExpand" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>