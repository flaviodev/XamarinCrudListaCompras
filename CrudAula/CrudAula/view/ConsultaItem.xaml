<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudListaDeCompra.view.ConsultaItem" Title="Dados do Item">
    <ContentPage.Content>
        <StackLayout Padding="15">
            
            <Label Text="Descrição: "/>
            <Entry x:Name="Descricao" IsEnabled="False"/>
            
            <Label Text="Quantidade: "/>
            <Entry x:Name="Quantidade"  IsEnabled="False"/>
            
            <Label Text="Categoria: "/>
            <Entry x:Name="Categoria"  IsEnabled="False" />

            <Button x:Name="Edita" Text="Editar" Clicked="EditarClicked" />

            <Button x:Name="Exclui" Text="Excluir" Clicked="ExcluirClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>