<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudListaDeCompra.view.AlteraItem">
    <ContentPage.Content>
        <StackLayout Padding="15">

            <Label Text="Descrição: "/>
            <Entry x:Name="Descricao" Placeholder="Digite a descrição do item"/>

            <Label Text="Quantidade: "/>
            <Entry x:Name="Quantidade"   Placeholder="informe a quantidade" />

            <Label Text="Categoria: "/>
            <Entry x:Name="Categoria" Placeholder="Digite a categoria"/>

            <Button x:Name="Salvar" Text="Salvar" Clicked="SalvarClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>